<link rel="stylesheet" href="/stylesheets/app.css">
<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-8 offset-md-2 shadow-lg p-5">
        <h1 class="text-center">Add Campground</h1>
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control shadow-lg" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Correct!
                </div>
                <div class="invalid-feedback">
                    Please provide a campground title!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label"l for="location">Location</label>
                <input class="form-control shadow-lg" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Correct!
                </div>
                <div class="invalid-feedback">
                    Please provide a location!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group shadow-lg ">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" id="price" placeholder="0.00" aria-label="price"
                    aria-describedby="price-label" name="campground[price]" required>
                    <div class="valid-feedback">
                        Correct!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a price!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" l for="description">Description</label>
                <textarea class="form-control shadow-lg" type="text" id="description" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    Correct!
                </div>
                <div class="invalid-feedback">
                    Please provide a description!
                </div>
            </div>
            <div class="mb-5">
                <label class="form-label" for="image">Add image(s)</label>
                <div class="form-file custom-file shadow-lg">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add campground</button>
            </div>
        </form>
        <a href="/campgrounds">&larr;All Campgrounds</a>
    </div>
</div>