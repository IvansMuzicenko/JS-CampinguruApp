<% layout('layouts/boilerplate') %>
<div
	class="col-lg-4 offset-lg-4 shadow-light card-body shadow p-5 rounded bg mt-5"
>
	<h1 class="text-center mb-5">Log-in</h1>
	<form
		id="loginForm"
		action="/login"
		method="POST"
		class="validated-form"
		novalidate
	>
		<div class="mb-4">
			<label for="Login" class="form-label"> E-mail</label>
			<input
				type="email"
				class="form-control shadow-light"
				id="username"
				name="username"
				placeholder="E-mail"
				required
			/>
			<div id="invalidFeedback" class="invalid-feedback"></div>
		</div>

		<div class="mb-5">
			<label for="password" class="form-label"> Password</label>
			<input
				type="password"
				class="form-control shadow-light rounded"
				id="password"
				name="password"
				placeholder="Password"
				required
			/>
		</div>
		<button class="btn btn-primary btn-block">Log-in</button>
	</form>
</div>
<script src="/javascripts/loginCheck.js"></script>
